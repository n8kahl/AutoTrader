# Required
TRADIER_ACCESS_TOKEN=
TRADIER_ENV=sandbox
TRADIER_ACCOUNT_ID=VA00000000
POLYGON_API_KEY=

# Behavior
DRY_RUN=1
SCAN_INTERVAL_SEC=30
USE_POLYGON_EQUITY=0

# Server
PORT=8080

# Strategy
SYMBOLS=TSLA,SPY,QQQ,SPX,NDX
ORDER_QTY=1
STRATEGY_INTERVAL=1m
LOOKBACK_MIN=180
LOOKBACK_DAYS=120
VWAP_COOLDOWN_SEC=900
VWAP_MIN_RVOL=1.1
POWER_HOUR_SYMBOLS=SPX,NDX
POWER_HOUR_START=15:00
RISK_PER_TRADE_USD=100
RISK_STOP_ATR_MULTIPLIER=1.2
TARGET_ONE_ATR_MULTIPLIER=1.0
TARGET_TWO_ATR_MULTIPLIER=2.0
PARTIAL_EXIT_PCT=0.5
TRADE_TIMEOUT_MIN=45
ENTRY_SPREAD_BPS=10
ENTRY_LIMIT_OFFSET_BPS=2.0
ENTRY_LIMIT_TIMEOUT_SEC=2
ENABLE_OPTIONS_FEEDBACK=1
OPTIONS_MIN_VOLUME=500
OPTIONS_MAX_IV=3.0
OPTIONS_CACHE_TTL_SEC=300

# Symbol execution proxies (map source:index -> execution:etf)
SYMBOL_EXECUTION_MAP=SPX:SPY,NDX:QQQ

# Websocket streamer
POLYGON_WS_URL=wss://socket.polygon.io/stocks
POLYGON_WS_SYMBOLS=SPX,NDX,SPY,QQQ
POLYGON_WS_BATCH=100
POLYGON_WS_FLUSH_INTERVAL=2.0

# Risk Guardrails
RISK_MAX_CONCURRENT=3
RISK_MAX_OPEN_ORDERS=5
RISK_MAX_POSITIONS_PER_SYMBOL=0
RISK_MAX_ORDER_NOTIONAL_USD=0
TRADING_WINDOW_START=09:31
TRADING_WINDOW_END=15:55
SYMBOL_WHITELIST=
SYMBOL_BLACKLIST=
MIN_CASH_USD=0

# Bracket exits (only if both set)
# e.g., STOP_PCT=0.01 TP_PCT=0.02 (1% stop, 2% target)
# Leave these blank to disable bracket stops/targets
STOP_PCT=
TP_PCT=

# Trailing stop (optional)
# e.g., TRAIL_PCT=0.01 TRAIL_ACT_PCT=0.01
# Leave these blank to disable trailing stops
TRAIL_PCT=
TRAIL_ACT_PCT=

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=autotrader
DB_USER=autotrader
DB_PASSWORD=autotrader
DATABASE_URL=postgresql+psycopg2://autotrader:autotrader@db:5432/autotrader
